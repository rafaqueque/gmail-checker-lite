{
  "manifest_version": 2,

  "name": "Gmail Checker Lite",
  "description": "Does what it says. Only. No fancy features, just Gmail unread check!",
  "version": "0.2.6",

  "background": {
    "page": "background.html"
  },

  "options_page": "options.html",

  "permissions": [
    "https://mail.google.com/",
    "http://mail.google.com/",
    "https://inbox.google.com/",
    "http://inbox.google.com/",
    "tabs"
  ],

  "icons": { 
    "16": "img/icon_dark.png",
    "48": "img/icon_big.png",
    "128": "img/icon_big.png"
  },
  
  "browser_action": {
    "default_title": "Gmail Checker Lite",
    "default_icon": "img/icon_dark.png"
  }
}
